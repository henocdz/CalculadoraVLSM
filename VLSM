class VSLM(object):
	"""Genera tabla"""
	def __init__(self,deptos,num_deptos,ip):
		self.deptos = deptos
		self.numero_deptos = num_deptos
		self.ip = ip
		self.deptos_vlsm = []

	def validar(self):
		return (self.ip).hostsDisponibles(self.totalHosts())

	def totalHosts(self):
		h = 0
		for d in self.deptos:
			h += d['hosts']

	def calcula(self):
		pass

	def imprimir(self):
		print 'Nombre de Departamento |  Direccion de Subred |  Direccion de broadcast  |  MSR'
		for d in deptos_vlsm:
			print '%s \t | \t %s \t | \t %s \t | \t %s'	% (d['nombre'],d['red'],d['broadcast'],d['msr'],)
